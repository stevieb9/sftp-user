#!/usr/bin/perl

use warnings;
use strict;
use 5.12.0;

use Getopt::Long;

my ( $user, $pass, $group, $home );

my $args = GetOptions (
                    "user|u=s"  => \$user,
                    "pass|p=s"  => \$pass,
                    "group|g=s" => \$group,
                    "home|h=s"  => \$home,
                );

if ( defined( getpwnam( $user ))) {
    print "\n\nUser $user already exists... exiting.\n\n";
    exit;
}


